<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/list_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="List of Experiments"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/list_heading">

        <TextView
            android:id="@+id/wheatstone_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Wheatstone Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Maxwell Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Owen's Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Schering Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Anderson Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Hays Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Wein's Series Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. Wein Robinson Frequency Bridge"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#f0f2f0"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>